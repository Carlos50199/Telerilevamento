libray(raster)
library(ggplot2)
library(viridis)
library (ncdf4)

setwd("C:/lab/")

sc <- raster("c_gls_SSM1km_202305090000_CEURO_S1CSAR_V1.2.1.nc")
plot(sc)

scd <- as.data.frame(sc, xy=T)

ggplot() +
geom_raster(scd, mapping=aes(x=x, y=y, fill=Surface.Soil.Moisture)) +
ggtitle("Soil Moisture from Copernicus")

#cropping the image
ext<- c(23, 30, 62, 68) 
sc.crop <- crop(sc, ext)

